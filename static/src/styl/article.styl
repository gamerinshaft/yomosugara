.cloud
  bottom: -3%
  position fixed
  z-index 0

.cloud.cloud--type01
  left 40%

.cloud.cloud--type02
  left -80%

.container
  color #333
  padding-top 80px
  padding-bottom 40px
  background-repeat no-repeat
  background-attachment fixed
  background linear-gradient(to bottom, #00000a 0%, #2464dc 75%, #e6c8dc 90%, #ffdcb5 100%) // W3C
  // vendor prefix of gradation
  background #00000a // Old browsers
  background -moz-linear-gradient(top, #00000a 0%, #2464dc 75%, #e6c8dc 90%, #ffdcb5 100%) // FF3.6+
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%, #00000a), color-stop(75%, #2464dc), color-stop(90%, #e6c8dc), color-stop(100%, #ffdcb5)) // Chrome,Safari4+
  background -webkit-linear-gradient(top, #00000a 0%, #2464dc 75%, #e6c8dc 90%, #ffdcb5 100%) // Chrome10+,Safari5.1+
  background -o-linear-gradient(top, #00000a 0%, #2464dc 75%, #e6c8dc 90%, #ffdcb5 100%) // Opera 11.10+
  background -ms-linear-gradient(top, #00000a 0%, #2464dc 75%, #e6c8dc 90%, #ffdcb5 100%) // IE10+

  position relative
  width 100%
  min-height 100%

article
  margin 0px auto
  width 1000px
  box-sizing border-box
  padding 30px 150px
  background-color rgba(255, 255, 255, 0.8)
  position relative
  z-index 2

  img
    width 100%

  .article__info
    text-align right
    color #888
    font-size 14px

    .date
      text-decoration underline

    .writer
      text-decoration underline

.share-button
  position absolute
  top 80px
  right -15px
  z-index 3

  .share-button__facebook
    position relative
    margin 0px
    padding 0px
    width 70px
    height 70px
    border solid 1px #888
    background-color #3b5998
    box-shadow 0px 0px 6px 6px rgba(70, 70, 70, 0.3) inset

  .share-button__twitter
    position relative
    margin 0px
    margin-top 10px
    padding 0px
    width 70px
    height 70px
    border solid 1px #888
    background-color #55acee
    box-shadow 0px 0px 6px 6px rgba(70, 70, 70, 0.3) inset

    img
      position absolute
      top 2px


.breadcrumb
  position absolute
  top -15px
  left 30px
  z-index 3

.breadcrumb__home
  position relative
  margin 0px
  padding 0px
  width 35px
  height 30px
  color #eee
  border solid 1px #888
  text-align center
  background-color #ccc
  box-shadow 0px 0px 6px 6px rgba(70, 70, 70, 0.3) inset
  float left

  img
    position absolute
    top 2px
    left 6px
    width 23px

.breadcrumb__category
    position relative
    margin-left 36px
    width 250px
    height 26px
    padding-top 4px
    color #eee
    border solid 1px #888
    text-align center
    background-color #eb3d00
    box-shadow 0px 0px 6px 6px rgba(70, 70, 70, 0.3) inset

    img
      position absolute
      top 4px
      width 20px

    span
      margin-left 22px


footer
  margin 15px auto
  width 1000px
  box-sizing border-box
  padding 30px 40px
  background-color rgba(255, 255, 255, 0.8)
  position relative
  z-index 2

  .categories
    .active
      box-shadow 0px 0px 6px 6px rgba(70, 70, 70, 0.3) inset

    .category__popular
      float left
      position relative
      width 250px
      height 26px
      padding-top 4px
      color #eee
      border solid 1px #888
      text-align center
      background-color #cfc600

      img
        position absolute
        top 4px
        width 20px

      span
        margin-left 22px

    .category__recent
      float left
      position relative
      margin-left -1px
      width 250px
      height 26px
      padding-top 4px
      color #eee
      border solid 1px #888
      text-align center
      background-color #ab47cb

      img
        position absolute
        top 4px
        width 20px

      span
        margin-left 22px

  .category__box
    display none
    width 100%
    margin 0px
    padding 0px
    margin-top 15px
    list-style-type none
    list-style-position inside

    li
      float left
      width 33.33%
      box-sizing border-box
      padding 4px 2px

      a
        display block
        color #333
        box-sizing border-box
        border-left-width 2px
        border-left-style solid
        padding-left 12px

        &:hover
          padding-left 8px
          border-left-width 6px

  .category__box.active
    display block

  .category__box.popular
    a
      border-left-color #cfc600

      &:hover
        color #cfc600

  .category__box.recent
    a
      border-left-color #ab47cb

      &:hover
        color #ab47cb

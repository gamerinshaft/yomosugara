.about__box
  width 1030px
  height 400px
  border-box box-sizing
  margin 0 auto
  margin-top 8%
  background-color rgba(255, 255, 255, 0.8)
  color #333
  padding 20px

.about__title
  width 100%
  text-align center
  font-weight bold

  .title
    font-size 36px

.about__description
  width 100%
  text-align center

.about__members
  width 800px
  margin 0 auto
  margin-top 30px

  .members
    box-sizing border-box
    width 180px
    float left
    padding 0px
    margin 0px
    list-style-type none
    list-style-position inside

    .members__member
      width 100%
      padding 10px 0px
      text-align center
      font-size 18px

      &:hover
        cursor pointer

    .members__member.active
      border solid 1px #888
      box-shadow 0px 0px 6px 6px rgba(140, 140, 140, 0.3) inset

  .profile
    width 620px
    float left

    .profile__icon
      margin 0px 35px
      margin-top 70px
      float left
      img
        border-radius 50%
        width 80px

    .profile__comment
      width 470px
      float left

